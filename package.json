{
  "name": "demo-project",
  "version": "1.0.0",
  "description": "showcase for new react/ts features",
  "main": "src/client/index.tsx",
  "scripts": {
    "dev": "concurrently  \"npm run server:dev\" \"npm run client:dev\"",
    "client:dev": "cross-env TS_NODE_PROJECT=\"./tsconfig-client.json\"&& webpack-dev-server --config ./webpack.config.dev.js  --mode development",
    "server:dev": "cross-env TS_NODE_PROJECT=\"./tsconfig-server.json\" NODE_ENV=development nodemon ./src/server/index.ts",
    "build": "concurrently  \"npm run server:build\" \"npm run client:build\"",
    "client:build": "rimraf dist/public && cross-env NODE_OPTIONS=--max_old_space_size=3500 node_modules/.bin/webpack --mode production --config dev/webpack.config.prod.js",
    "server:build": "rimraf dist/server && cross-env TS_NODE_PROJECT=\"./tsconfig-server.json\" tsc --p ./tsconfig-server.json",
    "lint": "node ./node_modules/tslint/bin/tslint --fix -c tslint.json --project tsconfig.json -t codeFrame",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "npm run lint && tsc --noemit"
  },
  "keywords": [
    "react",
    "redux",
    "typescript",
    "nodejs",
    "koa"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run test",
      "prepare-commit-msg": "node ./test/commit-msg-checker.js"
    }
  },
  "author": "vasiliy.shakhov@gmail.com",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "@types/socket.io-client": "^1.4.32",
    "config": "^3.0.1",
    "connected-react-router": "^6.3.1",
    "inversify": "^5.0.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-logger": "^3.2.0",
    "koa-passport": "^4.1.1",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.11",
    "path": "^0.12.7",
    "react": "^16.8.1",
    "react-bootstrap": "^1.0.0-beta.5",
    "react-dom": "^16.8.1",
    "react-redux": "^6.0.0",
    "react-router": "^4.3.1",
    "redux": "^4.0.1",
    "resolve-url": "^0.2.1",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "styled-components": "^4.1.3",
    "typescript": "^3.3.3"
  },
  "devDependencies": {
    "@types/config": "0.0.34",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-passport": "^4.0.2",
    "@types/koa-router": "^7.0.39",
    "@types/koa__cors": "^2.2.3",
    "@types/react-dom": "^16.8.2",
    "@types/react-redux": "^7.0.1",
    "@types/react-router-redux": "^5.0.18",
    "@types/socket.io": "^2.1.2",
    "@types/styled-components": "^4.1.10",
    "browser-sync": "^2.26.3",
    "browser-sync-webpack-plugin": "^2.2.2",
    "cache-loader": "^2.0.1",
    "cross-env": "^5.2.0",
    "get-my-ip": "0.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "react-hot-loader": "^4.6.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.2",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-microsoft-contrib": "^6.0.0",
    "tslint-react": "^3.6.0",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1"
  }
}
